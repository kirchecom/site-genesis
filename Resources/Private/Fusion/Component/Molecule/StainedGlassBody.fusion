prototype(KircheCom.SiteGenesis:Component.Molecule.StainedGlassBody) < prototype(Neos.Fusion:Component) {
    title = null
    subtitle = null
    text = null

    renderer = afx`
        <h5 @if.condition={props.title} class="card-title">{props.title}</h5>
        <h6 @if.condition={props.subtitle} class="card-subtitle mb-2 text-muted">{props.subtitle}</h6>
        <p class="card-text">{props.text}</p>
    `
}
